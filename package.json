{
    "name": "webpack-bootstrap4",
    "version": "1.0.0",
    "description": "A Webpack Bootstrap 4 Starterpack",
    "main": "app.js",
    "scripts": {
        "build": "webpack --mode=development",
        "build:watch": "webpack --mode=development --watch",
        "start": "webpack --mode=production",
        "start:watch": "webpack --mode=production --watch",
        "live": "webpack-dev-server --watch",
        "serve": "concurrently --kill-others \"npm run live\" \"npm run build:watch\""
    },
    "keywords": [
        "Webpack",
        "Bootstrap 4",
        "Starterpack",
        "Sass"
    ],
    "author": "Ammar Yasir",
    "license": "ISC",
    "dependencies": {
        "bootstrap": "^4.5.2",
        "jquery": "^3.5.1",
        "popper.js": "^1.16.1"
    },
    "devDependencies": {
        "webpack": "^4.44.1",
        "autoprefixer": "^9.8.6",
        "concurrently": "^5.3.0",
        "css-loader": "^4.2.1",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.3.0",
        "node-sass": "^4.14.1",
        "postcss-loader": "^3.0.0",
        "sass-loader": "^9.0.3",
        "style-loader": "^1.2.1",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    }
}
